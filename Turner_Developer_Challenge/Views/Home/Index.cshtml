@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}
@if (Request.IsAuthenticated)
{
    <script id="data-template" type="text/x-handlebars-template">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Release Year</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each this}}
                <tr>
                    <td>{{TitleID}}</td>
                    <td>
                        {{TitleName}}
                    </td>
                    <td>
                        {{ReleaseYear}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </script>
    <div class="container" style="margin-top: 5%;">
        <div class="col-md-6 col-md-offset-3">
            <!-- Search Form -->
            <form role="form">

                <!-- Search Field -->
                <div class="row">
                    <h1 class="text-center">Search Titles</h1>
                    <hr />
                    <div class="form-group">
                        <div class="input-group">
                            <input id="titleNameSearch" class="form-control" type="text" name="search" placeholder="Search"/>
                            <span class="input-group-btn">
                                <button class="btn btn-success" type="submit" onclick="Search()"><span class="glyphicon glyphicon-search" aria-hidden="true"><span style="margin-left:10px;">Search</span></span></button>
                            </span>
                        </div>
                    </div>
                    <div id="form">

                    </div>
                </div>

            </form>
        <!-- End of Search Form -->

        </div>
    </div>

}
else
{
    <div class="jumbotron">
        <h1>Movie Title Searcher</h1>
        <p class="lead">
            Users can search for their favorite movies after
            passing authentication. To do this, you must sign in using your
            Gmail account. Navigate back to the home screen where you can perform
            a search.
        </p>
    </div>
}